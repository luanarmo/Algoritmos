<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="Controller.GraficaController"
          prefHeight="200.0" prefWidth="300.0"  vgap="10" hgap="5" alignment="CENTER">

    <HBox alignment="TOP_CENTER" GridPane.rowIndex="0" GridPane.columnSpan="2">
        <Text fx:id="titulo" text="Identifica la Raiz"/>
    </HBox>
    <Label text="A"  GridPane.rowIndex="1" GridPane.halignment="RIGHT"/>
    <Label text="B"   GridPane.rowIndex="2" GridPane.halignment="RIGHT"/>
    <Label text="error"   GridPane.rowIndex="3" GridPane.halignment="RIGHT"/>
    <TextField fx:id="tfB" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <TextField fx:id="tferror" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <TextField fx:id="tfA" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Button text="Mostrar Grafica" GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.halignment="CENTER"/>
    <HBox spacing="5" alignment="BOTTOM_LEFT" GridPane.rowIndex="5" GridPane.columnIndex="1">
        <Button fx:id="btnAceptar" text="Aceptar" />
        <Button fx:id="btnCancelar" text="Cancelar"/>
    </HBox>

</GridPane>
